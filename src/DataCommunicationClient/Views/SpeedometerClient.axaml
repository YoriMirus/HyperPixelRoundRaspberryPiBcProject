<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:DataCommunicationClient.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="DataCommunicationClient.Views.SpeedometerClient"
             x:DataType="vm:SpeedometerClientViewModel">
    <Grid RowDefinitions="50,50,50,1*,1*,1*,1*" ColumnDefinitions="1*,1*">
        
        <!--Zadávání hodnoty-->
        <!--Min a max hodnoty-->
        <TextBlock Text="Min. hodnota" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>
        <TextBox Text="{Binding MinValue}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,30,10,10"/>
        
        <TextBlock Grid.Column="1" Text="Max. hodnota" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10"/>
        <TextBox Grid.Column="1" Text="{Binding MaxValue}" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10,30,10,10"/>

        <!--Slider plus výpis zadané hodnoty-->
        <Slider Grid.Row="1" Grid.ColumnSpan="2" Value="{Binding Value}" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="10,0,10,0" Minimum="{Binding MinValue}" Maximum="{Binding MaxValue}"></Slider>
        <TextBlock  Text="{Binding Value}" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" Margin="10"/>
        
        
        <!--Nastavení připojení-->
        <TextBlock Grid.Row="2" Grid.ColumnSpan="2" Text="Nastavení připojení" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="32" Margin="10"/>
        
        <TextBlock Grid.Row="3" Text="Mezi-procesová komunikace" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="24" TextWrapping="Wrap"/>
        <TextBlock Grid.Row="4" Text="Název připojení" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
        <TextBox Grid.Row="5" Text="{Binding PipeName}" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="10"/>
        <Button Grid.Row="6" Click="IPCButtonClick" Content="Aktivovat" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10"/>
        
        <TextBlock Grid.Column="1" Grid.Row="3" Text="LAN komunikace" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="24" TextWrapping="Wrap"/>
        <TextBlock Grid.Column="1" Grid.Row="4" Text="Port" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"/>
        <TextBox Grid.Column="1" Grid.Row="5" Text="{Binding PortNum}" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="10"/>
        <Button Grid.Column="1" Grid.Row="6" Click="TCPIPButtonClick" Content="Aktivovat" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10"/>
        
    </Grid>
</UserControl>
