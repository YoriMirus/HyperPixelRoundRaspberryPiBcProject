<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mapsui="clr-namespace:Mapsui.UI.Avalonia;assembly=Mapsui.UI.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450" Width="480" Height="480"
             Background="White"
             x:Class="RoundDisplayAppGUI.Views.MapWidget">
    <Grid RowDefinitions="80,400">
        <TextBlock Text="^" FontSize="60" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <mapsui:MapControl Grid.Row="1" PointerPressed="Map_OnPointerPressed" x:Name="Map" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
    </Grid>
</UserControl>
